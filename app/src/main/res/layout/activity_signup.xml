<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signupback"
    tools:context=".Signup">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:startIconDrawable="@drawable/baseline_person_2_24"
        app:helperText="*Recquired"
        app:helperTextTextColor="#FF0000"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/greybackground">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/name"
            android:layout_height="60dp"
            android:background="@drawable/greybackground"
            android:hint="        Name" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:startIconDrawable="@drawable/baseline_lock_person_24"
        app:helperText="*Recquired"
        app:helperTextTextColor="#FF0000"

        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/greybackground">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/uniid"
            android:layout_height="60dp"
            android:background="@drawable/greybackground"
            android:inputType="textEmailAddress"
            android:hint="        Unique Id" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:startIconDrawable="@drawable/baseline_mark_email_read_24"
        app:helperText="*Recquired"
        app:helperTextTextColor="#FF0000"

        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/greybackground">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/mail"
            android:layout_height="60dp"
            android:background="@drawable/greybackground"
            android:inputType="textEmailAddress"
            android:hint="        Email" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:startIconDrawable="@drawable/baseline_format_list_numbered_24"
        app:helperText="*Recquired"
        app:helperTextTextColor="#FF0000"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:endIconMode="password_toggle"
        android:background="@drawable/greybackground">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/pass"
            android:inputType="numberPassword"
            android:background="@drawable/greybackground"
            android:hint="        Password" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signup"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="SignUp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:textSize="18dp"
        android:backgroundTint="@color/brown"/>
</LinearLayout>